        <div class="modal fade" id="acctRequestModal" tabindex="-1" role="dialog" aria-labelledby="acctRequestModalLabel" aria-hidden="true">
          <div class="modal-dialog-centered modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
                <h5 class="modal-title" id="acctRequestModalLabel" text-align="center">Enter account information below to
                  request a new account </h5>

              </div>
              <div class="modal-body">
                <!-- Form Control for New Admin Account Request -->
                <form id="newacct" name="newacct" method="post" action="/signup">
                  <table>
                    <tr>
                      <td><label for="firstname">Enter First Name:</label></td>
