<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <div class="jumbotron">
          <h1>Base Drop Vinyl Shop</h1>
          <h2>Managing your inventory of Vinyl Records</h2>
          <h3>{{msg}}</h3>
        </div>
        <img id="turntable1-img" class="turntable-buttons img-responsive" data-toggle="tooltip" title="Click to Enter Site" src="/img/turntable.gif"
          alt="Click to Enter Site">

        <!-- Button trigger for Admin login modal -->
        <button type="button" class="btn ctrbtns btn-primary" id="adminlogin" data-toggle="modal" data-target="#adminloginModal">
          ADMIN LOGIN
        </button>

        <!-- Button trigger for new Admin account ...this section will need a data-target-->
        <button type="button" class="btn ctrbtns btn-secondary" id="requestaccount" data-toggle="modal" data-target="">
          REQUEST NEW ACCOUNT
        </button>

        <!-- Admin Login Modal -->
        <div class="modal fade" id="adminloginModal" tabindex="-1" role="dialog" aria-labelledby="adminloginModalLabel" aria-hidden="ture">
          <div class="modal-dialog-centered modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
                <h5 class="modal-title" id="adminLoginLabel" text-align="center">Administration Page Login</h5>

              </div>
              <div class="modal-body">
                <!-- Form Control for Admin Login -->
                <form id="signin" name="signin" method="post" action="signin">
                  <label for="email">Email Address: </label>
                  <input class="text" name="email" type="text" />
                  <label for="password">Password: </label>
                  <input name="password" type="password" />

              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">CANCEL</button>
                <!-- Submit button for Admin Login -->
                <input class="btn" type="submit" value="SIGN IN" />
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>